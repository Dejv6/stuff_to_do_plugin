<p><%= t('escalation_mailer.mail_header') %>:</p>

<% @issues.each do |issue| %>
<p><%= link_to "##{issue.id}: #{issue.subject}", issue_url(issue) %></p>
<ul>
<li> <%= t('escalation_mailer.field_status') %>: <%= issue.status %> </li>
<li> <%= t('escalation_mailer.field_priority') %>: <%= issue.priority %> </li>
<li> <%= t('escalation_mailer.field_due_date') %>: <%= Setting.format_date issue.due_date %> </li>
<li> <%= t('escalation_mailer.field_done_ratio') %>: <%= issue.done_ratio %>% </li>
</ul>
<br>
<% end %>

